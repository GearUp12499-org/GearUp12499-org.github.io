---
import { gallery } from '../../data/gallery';
---

<main class="relative min-h-screen flex flex-col items-center justify-start overflow-hidden pt-24 px-4">
  <!-- Title -->
  <h1 
    class="text-5xl md:text-7xl font-bold font-cal bg-gradient-to-r from-red-500 via-red-600 to-red-700 bg-clip-text text-transparent animate-gradient-x text-center mb-12"
  >
    {gallery.title}
  </h1>

  <!-- Gallery Grid -->
  <div id="gallery" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 max-w-6xl mx-auto mt-12">
    {gallery.images.map((image, index) => (
      <div 
        class="relative overflow-hidden rounded-lg shadow-lg animate-fade-up cursor-pointer gallery-item"
        style={`animation-delay: ${100 * index}ms;`}
        data-src={image.src}
      >
        <img
          src={image.src}
          alt={image.alt}
          class="w-full h-64 object-cover transform hover:scale-105 transition-transform duration-300"
        />
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white p-2 text-center">
          {image.alt}
        </div>
      </div>
    ))}
  </div>

  <!-- Modal / Lightbox -->
  <div 
    id="lightbox" 
    class="fixed inset-0 hidden flex items-center justify-center bg-black bg-opacity-70 backdrop-blur-sm z-50 transition-opacity"
  >
    <img 
      id="lightbox-img" 
      src="" 
      alt="Enlarged" 
      class="block max-w-[90%] max-h-[90%] rounded-xl shadow-2xl transform scale-75 opacity-0 transition-all duration-300"
    />
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img');

    // Open modal
    document.querySelectorAll('.gallery-item').forEach(item => {
      item.addEventListener('click', () => {
        lightboxImg.src = item.dataset.src;
        lightbox.classList.remove('hidden');

        // Animate zoom + fade-in
        requestAnimationFrame(() => {
          lightboxImg.classList.remove('scale-75', 'opacity-0');
          lightboxImg.classList.add('scale-100', 'opacity-100');
        });
      });
    });

    // Close modal
    lightbox.addEventListener('click', () => {
      lightboxImg.classList.remove('scale-100', 'opacity-100');
      lightboxImg.classList.add('scale-75', 'opacity-0');

      setTimeout(() => {
        lightbox.classList.add('hidden');
        lightboxImg.src = "";
      }, 250);
    });

    // Prevent closing when clicking image
    lightboxImg.addEventListener('click', (e) => e.stopPropagation());
  });
</script>

<style>
  @keyframes gradient-x {
    0%, 100% { background-size: 200% 100%; background-position: left center; }
    50% { background-position: right center; }
  }

  @keyframes fade-up {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  .animate-gradient-x {
    animation: gradient-x 15s ease infinite;
  }

  .animate-fade-up {
    animation: fade-up 1s ease forwards;
  }
</style>